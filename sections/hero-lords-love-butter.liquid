<section class="hero">
  <div class="hero-grid">
    <div class="hero-content">
      <h1 class="hero-title">
        {{ section.settings.title | default: "Lords Love" }}
        <span class="text-butter-gold">{{ section.settings.title_highlight | default: "Butter" }}</span>
      </h1>
      
      <p class="hero-tagline">{{ section.settings.tagline | default: '"Spread the Love"' }}</p>
      
      <p class="hero-description">
        {{ section.settings.description | default: "A 100% natural skincare alternative with no chemicals that works better than traditional products. Safe for everyoneâ€”from babies to grandparentsâ€”our beef tallow balm promotes healthy skin and elasticity while spreading love." }}
      </p>
      
      <div class="hero-buttons">
        {% if section.settings.button_primary_text != blank %}
          <a href="{{ section.settings.button_primary_link | default: '/collections/all' }}" class="btn btn-primary btn-lg">
            {{ section.settings.button_primary_text }}
          </a>
        {% endif %}
        {% if section.settings.button_secondary_text != blank %}
          <a href="{{ section.settings.button_secondary_link | default: '/pages/science' }}" class="btn btn-secondary btn-lg">
            {{ section.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>
      
      <div class="hero-stats hero-pills">
        {% assign feature_pills = "100% GRASS FED|CHEMICAL FREE|ORGANIC|NON-GMO" | split: "|" %}
        {% for pill in feature_pills %}
          <span class="hero-pill">{{ pill }}</span>
        {% endfor %}
      </div>
    </div>
    
    <div class="hero-products">
      {% comment %} Allow selecting products via theme editor; fallback to known handles {% endcomment %}
      {% assign jar_fallback = 'lords-love-butter-whipped-beef-tallow-balm-chemical-free-skincare-alternative-crafted-from-grass-fed-beef-tallow' %}
      {% assign tin_fallback = 'lords-love-butter-portable-tin-whipped-beef-tallow-balm-2-oz' %}

      {% assign jar_product = section.settings.jar_product %}
      {% if jar_product == blank %}
        {% assign jar_product = all_products[jar_fallback] %}
      {% endif %}
      {% assign tin_product = section.settings.tin_product %}
      {% if tin_product == blank %}
        {% assign tin_product = all_products[tin_fallback] %}
      {% endif %}
      
      {% if jar_product %}
      <div class="product-card">
        <div class="product-badge">{{ '2 oz jar' }}</div>
        <a href="{{ jar_product.url }}" class="product-link" aria-label="{{ jar_product.title }}">
          {% if jar_product.featured_image %}
            {{ jar_product.featured_image | image_url: width: 400 | image_tag: class: 'product-image', alt: jar_product.title }}
          {% else %}
            <div class="product-placeholder">ðŸ«™</div>
          {% endif %}
        </a>
        <h3 class="product-name"><a href="{{ jar_product.url }}" class="product-name-link">{{ jar_product.title }}</a></h3>
        <p class="product-price">{{ jar_product.price | money }}</p>
        {% form 'product', jar_product, class: 'product-form' %}
          {% comment %}
            Automatically inserted by Shop Pay Installments theme updater
          {% endcomment %}
          {% unless settings.disable_autogenerated_payment_terms %}
            {{ form | payment_terms }}
          {% endunless %}
          <input type="hidden" name="id" value="{{ jar_product.selected_or_first_available_variant.id }}">
          <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;" {% unless jar_product.available %}disabled{% endunless %}>
            {% if jar_product.available %}Add to Cart{% else %}Sold Out{% endif %}
          </button>
        {% endform %}
      </div>
      {% endif %}
      
      {% if tin_product %}
      <div class="product-card">
        <div class="product-badge">{{ '2oz tin' }}</div>
        <a href="{{ tin_product.url }}" class="product-link" aria-label="{{ tin_product.title }}">
          {% if tin_product.featured_image %}
            {{ tin_product.featured_image | image_url: width: 400 | image_tag: class: 'product-image', alt: tin_product.title }}
          {% else %}
            <div class="product-placeholder">ðŸ¥«</div>
          {% endif %}
        </a>
        <h3 class="product-name"><a href="{{ tin_product.url }}" class="product-name-link">{{ tin_product.title }}</a></h3>
        <p class="product-price">{{ tin_product.price | money }}</p>
        {% form 'product', tin_product, class: 'product-form' %}
          {% comment %}
            Automatically inserted by Shop Pay Installments theme updater
          {% endcomment %}
          {% unless settings.disable_autogenerated_payment_terms %}
            {{ form | payment_terms }}
          {% endunless %}
          <input type="hidden" name="id" value="{{ tin_product.selected_or_first_available_variant.id }}">
          <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;" {% unless tin_product.available %}disabled{% endunless %}>
            {% if tin_product.available %}Add to Cart{% else %}Sold Out{% endif %}
          </button>
        {% endform %}
      </div>
      {% endif %}
    </div>
  </div>
</section>

